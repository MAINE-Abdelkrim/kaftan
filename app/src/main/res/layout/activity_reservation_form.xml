<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E9"
    tools:context=".ReservationFormActivity">

    <TextView
        android:id="@+id/reservation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réserver votre Caftan"
        android:textColor="#A08C5C"
        android:textSize="28sp"
        android:fontFamily="@font/moroccan_font"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_start_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="48dp"
        app:boxStrokeColor="#A08C5C"
        app:hintTextColor="#A08C5C"
        app:startIconDrawable="@drawable/ic_calendar_gold" app:layout_constraintTop_toBottomOf="@id/reservation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de début"
            android:focusable="false"
            android:inputType="none"
            android:textColor="#333333" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_end_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="#A08C5C"
        app:hintTextColor="#A08C5C"
        app:startIconDrawable="@drawable/ic_calendar_gold" app:layout_constraintTop_toBottomOf="@id/text_input_start_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de fin"
            android:focusable="false"
            android:inputType="none"
            android:textColor="#333333" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirm_reservation_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmer la réservation"
        android:textColor="@android:color/white"
        android:backgroundTint="#A08C5C"
        android:padding="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/moroccan_font"
        app:cornerRadius="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/text_input_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>