<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3E9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salam, [Nom Utilisateur]!" android:textColor="#A08C5C"
        android:textSize="28sp"
        android:fontFamily="@font/moroccan_font"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/main_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_view_caftans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir les Caftans"
            android:textColor="@android:color/white"
            android:backgroundTint="#C1A47B"
            android:padding="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/moroccan_font"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/button_my_reservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes RÃ©servations"
            android:textColor="@android:color/white"
            android:backgroundTint="#C1A47B"
            android:padding="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/moroccan_font"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon Profil"
            android:textColor="@android:color/white"
            android:backgroundTint="#C1A47B"
            android:padding="16dp"
            android:textSize="20sp"
            android:fontFamily="@font/moroccan_font"
            app:cornerRadius="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>