<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E0D7C6" app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/caftan_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/caftan_detail_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Image du caftan"
            android:background="@drawable/rounded_image_background" /> <TextView
        android:id="@+id/caftan_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Caftan Ã‰meraude Royale"
        android:textColor="#333333"
        android:textSize="20sp"
        android:fontFamily="@font/moroccan_font"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/caftan_image"
        app:layout_constraintStart_toEndOf="@id/caftan_image"
        app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/caftan_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="150 DH / jour"
            android:textColor="#C1A47B" android:textSize="18sp"
            android:fontFamily="@font/moroccan_font"
            app:layout_constraintTop_toBottomOf="@id/caftan_name"
            app:layout_constraintStart_toEndOf="@id/caftan_image"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>